<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <div class="row">
        <div class="col text-center">
          <img src="/assets/img/burger1.png" alt="Burger" height="150px">
          <h3>Eat-Da-Burger!</h3>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{this.id}} - {{this.burger_name}}
            <button type="button" id="devour-btn">Devour It</button>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- add the area where the devoured burgers will go --}}
      </div>
      <div class="row">
        <div class="col text-center">
          <form class="create-form">
            <div class="form-group">
              <input type="text" name="burgername" id="burger-input"><br>
              <input type="submit" value="Submit">
            </div>
          </form>
          <p>Enter a burger you want to eat then click the "Submit" button</p>
        </div>
      </div>
    </div>
  </div>
</div>